{
  "compilerOptions": {
    "baseUrl": "./src/",
    "outDir": "./dist/",
    "rootDir": "./src/",
    "exactOptionalPropertyTypes": true,
    "noImplicitOverride": true,
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "target": "es2022",
    "lib": ["es2022"]
  },
  "include": ["./src/**/*.ts", "./src/**/*.txt"]
}
